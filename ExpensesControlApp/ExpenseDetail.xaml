<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ExpensesControlApp.ExpenseDetail"
    Title="Detalhes da despesa">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Editar" Clicked="didTapEditExpense"/>
    </ContentPage.ToolbarItems>

    <StackLayout>
        <StackLayout Margin="33.0">
            <Label Text="Titulo:" FontSize="18.0"/>
            <Label Text="{Binding expenseTitle}" FontSize="16.0" x:Name="title"/>

            <Label Text="Descrição:" FontSize="18.0" Margin="0,25,0,0"/>
            <Label Text="{Binding expenseDescription}" FontSize="16.0" x:Name="description"/>

            <Label Text="Valor:" FontSize="18.0" Margin="0,25,0,0" />
            <Label Text="{Binding expenseAmount, StringFormat='R$ {0:F0}'}" FontSize="16.0" x:Name="amount"/>

            <Label Text="Data do registro:" FontSize="18.0" Margin="0,25,0,0"/>
            <Label Text="{Binding expenseDate}" FontSize="16.0"/>
         </StackLayout>

        <Button Text="Deletar"
                BackgroundColor="LightSalmon"
                TextColor="White"
                Margin="25"
                VerticalOptions="EndAndExpand"
                Clicked="didTapDeleteExpense"/>
     </StackLayout>
</ContentPage>
